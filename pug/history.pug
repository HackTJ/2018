html(prefix="og: http://ogp.me/ns#")
    head
        title HackTJ History

        meta(http-equiv="CACHE-CONTROL", content="NO-CACHE")
        meta(http-equiv='content-type', content='text/html; charset=utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
        meta(name="apple-mobile-web-app-capable" content="yes")

        link(rel="icon" type="image/png" href="/img/favicon.png")

        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:100,300,400", type="text/css")
        link(rel='stylesheet', href='css/confirmation.css?v=1.0', type='text/css')
    body
        .centered-box.relative.history
            .header-section
                .icon.icon-clock
                h3.title A Walk Through Memory Lane
            .history-section
                .action-section
                    img(src="https://hacktj.org/2017/img/favicon.png" alt="HackTJ 4.0")
                    .info-container
                        h3.section-title HackTJ 4.0
                        h4.section-year 2017
                        a.button(href="https://hacktj2017.devpost.com/" target="_blank") DevPost
                
                .action-section
                    img(src="https://hacktj.org/2016/img/favicon.png" alt="HackTJ 3.0")
                    .info-container
                        h3.section-title HackTJ 3.0
                        h4.section-year 2016
                        a.button(href="https://hacktj2016.devpost.com/" target="_blank") DevPost

                .action-section
                    img(src="https://hacktj.org/2015/img/favicon.png" alt="HackTJ 2.0")
                    .info-container
                        h3.section-title HackTJ 2.0
                        h4.section-year 2015
                        a.button(href="https://hacktj2015.devpost.com/" target="_blank") DevPost

            
        .social-links
            .social-group
                a.social.pe-so-twitter(target="_blank" href="https://twitter.com/HackTJOfficial")
                a.social.pe-so-facebook(target="_blank" href="https://facebook.com/HackTJOfficial")
                a.social.pe-so-instagram(target="_blank" href="https://instagram.com/hacktjofficial")
            a.logo-link(target="_blank" href="https://hacktj.org")
                img.logo(src="img/logo-bw.png" alt="HackTJ")

